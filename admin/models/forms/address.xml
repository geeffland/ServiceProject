<?xml version="1.0" encoding="utf-8"?>
	<!--
		$Id: address.xml
	-->
<form>
	<fieldset>
		<field name="id"  type="text" class="readonly" label="COM_SERVICEPROJECT_FIELD_ID_LABEL"
			description ="COM_SERVICEPROJECT_FIELD_ID_DESC" size="10" default="0" readonly="true" />
			
		<field name="address_id" type="text" label="COM_SERVICEPROJECT_FIELD_ADDRESSID_LABEL"
			description="COM_SERVICEPROJECT_FIELD_ADDRESSID_DESC" class="readonly" size="10" readonly="true" />

		<field name="addressname" type="text" label="COM_SERVICEPROJECT_FIELD_ADDRESSNAME_LABEL"
			description="COM_SERVICEPROJECT_FIELD_ADDRESSNAME_DESC" class="inputbox" size="100"/>

		<field name="streetaddress1" type="text" label="COM_SERVICEPROJECT_FIELD_STREETADDRESS1_LABEL"
			description="COM_SERVICEPROJECT_FIELD_STREETADDRESS1_DESC" class="inputbox" size="100"
			required="true" />

		<field name="streetaddress2" type="text" label="COM_SERVICEPROJECT_FIELD_STREETADDRESS2_LABEL"
			description="COM_SERVICEPROJECT_FIELD_STREETADDRESS2_DESC" class="inputbox" size="100"/>

		<field name="city" type="text" label="COM_SERVICEPROJECT_FIELD_CITY_LABEL"
			description="COM_SERVICEPROJECT_FIELD_CITY_DESC" class="inputbox" size="100"
			required="true" />

		<field name="state" type="text" label="COM_SERVICEPROJECT_FIELD_STATE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_STATE_DESC" class="inputbox" size="100"
			required="true" />

		<field name="zipcode" type="text" label="COM_SERVICEPROJECT_FIELD_ZIPCODE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_ZIPCODE_DESC" class="inputbox" size="12"
			required="true" />

		<field name="latitude" type="text" label="COM_SERVICEPROJECT_FIELD_LATITUDE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_LATITUDE_DESC" class="inputbox" size="20"/>

		<field name="longitude" type="text" label="COM_SERVICEPROJECT_FIELD_LONGITUDE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_LONGITUDE_DESC" class="inputbox" size="20"/>

		<field name="gm_zoomlevel" type="text" label="COM_SERVICEPROJECT_FIELD_GMZOOMLEVEL_LABEL"
			description="COM_SERVICEPROJECT_FIELD_GMZOOMLEVEL_DESC" class="inputbox" size="20"/>

		<field name="center_latitude" type="text" label="COM_SERVICEPROJECT_FIELD_CENTER_LATITUDE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_CENTER_LATITUDE_DESC" class="inputbox" size="20"/>

		<field name="center_longitude" type="text" label="COM_SERVICEPROJECT_FIELD_CENTER_LONGITUDE_LABEL"
			description="COM_SERVICEPROJECT_FIELD_CENTER_LONGITUDE_DESC" class="inputbox" size="20"/>

		<field name="published" type="list" label="COM_SERVICEPROJECT_PUBLISHED_STATE"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="updatereason_id" type="updatereasonaddress" label="COM_SERVICEPROJECT_FIELD_UPDATEREASON_LABEL" 
			description="COM_SERVICEPROJECT_FIELD_UPDATEREASON_DESC2" class="inputbox" required="true" />

		<field name="updatecomments" type="textarea" label="COM_SERVICEPROJECT_FIELD_UPDATECOMMENTS_LABEL"
			description="COM_SERVICEPROJECT_FIELD_UPDATECOMMENTS_DESC" class="inputbox" rows="2" cols="50"/>

		<field name="ordering" type="ordering" class="inputbox"
			label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
			
		<field name="last_updated" type="text" label="COM_SERVICEPROJECT_FIELD_LASTUPDATED_LABEL"
			description ="COM_SERVICEPROJECT_FIELD_LASTUPDATED_DESC" class="readonly" size="15" default="0" readonly="true" />

		<field name="last_updated_by" type="usernames" label="COM_SERVICEPROJECT_FIELD_LASTUPDATEDBY_LABEL"
			description ="COM_SERVICEPROJECT_FIELD_LASTUPDATEDBY_DESC" class="readonly" readonly="true" />

	</fieldset>

</form>