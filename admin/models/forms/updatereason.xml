<?xml version="1.0" encoding="utf-8"?>
	<!--
		$Id: updatereason.xml
	-->
<form>
	<fieldset>
		<field name="id"  type="text" class="readonly" label="COM_SERVICEPROJECT_FIELD_ID_LABEL"
			description ="COM_SERVICEPROJECT_FIELD_ID_DESC" size="10" default="0" readonly="true" />
			
		<field name="updatereason" type="text" label="COM_SERVICEPROJECT_FIELD_UPDATEREASON_LABEL"
			description="COM_SERVICEPROJECT_FIELD_UPDATEREASON_DESC" class="inputbox" size="100"
			required="true" />

		<field name="updatereason_id" type="text" label="COM_SERVICEPROJECT_FIELD_UPDATEREASONID_LABEL"
			description="COM_SERVICEPROJECT_FIELD_UPDATEREASONID_DESC" class="inputbox" size="45" required="true" />

		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="updatetype" type="updatetype" label="COM_SERVICEPROJECT_FIELD_UPDATETYPE_LABEL" 
			description="COM_SERVICEPROJECT_FIELD_UPDATETYPE_DESC" class="inputbox" required="true" />

		<field name="ordering" type="ordering" class="inputbox"
			label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
			
	</fieldset>

</form>