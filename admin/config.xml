<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_SERVICEPROJECT_COMPONENT_LABEL"
		description="COM_SERVICEPROJECT_COMPONENT_DESC"
	>

		<field name="show_comp_description" type="radio"
			default="1"
			description="COM_SERVICEPROJECT_FIELD_CONFIG_DESCRIPTION_DESC"
			label="JGLOBAL_DESCRIPTION"
		>
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>

		<field name="comp_description" type="textarea"
			cols="50"
			description="COM_SERVICEPROJECT_FIELD_CONFIG_INTRO_DESC"
			label="COM_SERVICEPROJECT_FIELD_CONFIG_INTRO_LABEL"
			rows="3"
		/>

		<field name="target" type="list"
			default="0"
			description="COM_SERVICEPROJECT_FIELD_TARGET_DESC"
			label="COM_SERVICEPROJECT_FIELD_TARGET_LABEL"
		>
			<option value="0">JBROWSERTARGET_PARENT</option>
			<option value="1">JBROWSERTARGET_NEW</option>
			<option value="2">JBROWSERTARGET_POPUP</option>
			<option value="3">JBROWSERTARGET_MODAL</option>
		</field>

	</fieldset>

	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_serviceproject"
			filter="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>
</config>